<div class="edit-form-container">
  <div class="edit-form">
    <h2>Редактирование <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name,  autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :role %><br />
        <%= f.text_field :role, value: resource.roles.first.name, readonly: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>В настоящее время ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(оставьте пустым, если не хотите менять)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>Минимум <%= @minimum_password_length %> символов</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(нам нужен Ваш текущий пароль, чтобы подтвердить изменения)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Обновить", class: "btn" %><br /><br /><br /><br />
      </div>
    <% end %>

    <h3>Удалить мой аккаунт</h3>

    <div>Не понравилось? <%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, class: "btn" %></div>

    <div class="links-container">
      <%= link_to 'Выйти', destroy_user_session_path, 'data-turbo-method': :delete %>

      <%= link_to "Назад", :back %>

      <%= link_to 'Фитнес зал Style', styles_path %>
    </div>
  </div>
</div>

<style>/* Основной контейнер формы редактирования */
.edit-form-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; /* Высота экрана */
  background-color: #f2f2f2; /* Цвет фона */
}

/* Контейнер формы редактирования */
.edit-form {
  width: 400px;
  padding: 40px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

/* Заголовок формы */
.edit-form h2 {
  margin-bottom: 20px;
  text-align: center;
  font-size: 24px;
  color: #333;
}

/* Стили для поля ввода */
.edit-form .field {
  margin-bottom: 20px;
}

.edit-form label {
  display: block;
  margin-bottom: 5px;
  font-size: 16px;
  color: #666;
}

.edit-form input[type="text"],
.edit-form input[type="email"],
.edit-form input[type="password"] {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
}

/* Кнопка "Обновить" */
.edit-form .actions .btn {
  padding: 10px 20px;
  background-color: #007bff; /* Цвет кнопки */
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.edit-form .actions .btn:hover {
  background-color: #0056b3; /* Цвет кнопки при наведении */
}

/* Удаление аккаунта */
.edit-form h3 {
  margin-top: 20px;
  text-align: center;
  font-size: 20px;
  color: #333;
}

.edit-form .links-container {
  margin-top: 20px;
  text-align: center;
}

.edit-form .links-container a {
  color: #007bff; /* Цвет ссылки */
  text-decoration: none;
  font-size: 16px;
}

.edit-form .links-container a:hover {
  text-decoration: underline; /* Подчеркивание ссылки при наведении */
}
</style>