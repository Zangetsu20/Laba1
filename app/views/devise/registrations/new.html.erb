<div class="signup-form-container">
  <div class="signup-form">
    <h2>Зарегистрироваться</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :first_name, "Имя" %><br />
        <%= f.text_field :first_name,  autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Фамилия" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :role %><br />
        <%= f.collection_select :role_ids, Role.where(name: ['instructor', 'user']), :id, :name %>
      </div>

      <div class="field">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "Пароль" %>
        <% if @minimum_password_length %>
        <em>(Минимум <%= @minimum_password_length %> символов)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <div class="button-container">
          <%= f.submit "Зарегистрироваться", class: "btn" %>
        </div>
      </div>
    <% end %>

    <div class="links-container">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>/* Общий контейнер формы регистрации */
.signup-form-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; /* Высота экрана */
  background-color: #f2f2f2; /* Цвет фона */
}

/* Основной контейнер формы */
.signup-form {
  width: 400px;
  padding: 40px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

/* Заголовок формы */
.signup-form h2 {
  margin-bottom: 20px;
  text-align: center;
  font-size: 24px;
  color: #333;
}

/* Стили для поля ввода */
.signup-form .field {
  margin-bottom: 20px;
}

.signup-form label {
  display: block;
  margin-bottom: 5px;
  font-size: 16px;
  color: #666;
}

.signup-form input[type="text"],
.signup-form input[type="email"],
.signup-form input[type="password"],
.signup-form select {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
}

/* Кнопка "Зарегистрироваться" */
.signup-form .actions .button-container {
  text-align: center;
}

.signup-form .btn {
  padding: 10px 20px;
  background-color: #007bff; /* Цвет кнопки */
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.signup-form .btn:hover {
  background-color: #0056b3; /* Цвет кнопки при наведении */
}

/* Ссылки внизу формы */
.signup-form .links-container {
  margin-top: 20px;
  text-align: center;
}

.signup-form .links-container a {
  color: #007bff; /* Цвет ссылки */
  text-decoration: none;
  font-size: 16px;
}

.signup-form .links-container a:hover {
  text-decoration: underline; /* Подчеркивание ссылки при наведении */
}</style>