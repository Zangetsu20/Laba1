<h1>Редактирование записи</h1>

<%= render 'form', style: @style %>

<p><%= link_to 'Просмотреть', @style %></p>
<p><%= link_to 'Назад', styles_path %></p>
<style>
/* Заголовок */
h1 {
  font-size: 28px;
  color: #333;
  margin-bottom: 20px;
}

/* Форма */
form {
  width: 100%;
  max-width: 400px;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
}

/* Поля формы */
form label {
  display: block;
  margin-bottom: 5px;
  font-size: 16px;
  color: #666;
}

form input[type="text"],
form textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
  margin-bottom: 10px;
}

form input[type="submit"] {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

form input[type="submit"]:hover {
  background-color: #0056b3;
}

/* Ссылка "Назад" */
p a {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
}

/* Ссылка "Назад" при наведении */
p a:hover {
  background-color: #0056b3;
}</style>