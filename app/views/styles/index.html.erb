<h1>Список программ</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Зал</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.title %></td>
        <td><%= style.description %></td>
        <td><%= style.price %></td>
        <td><%= style.location %></td>
        <td><%= link_to 'Просмотреть', style %></td>
        <td><%= link_to 'Редактировать', edit_style_path(style) %></td>
        <td><%= link_to 'Удалить', style, 'data-turbo-method': :delete, data: { confirm: 'Вы уверены?' } %></td>
         <%= form_with(url: cart_add_path) do |f| %>
      <td><%= f.hidden_field :id, value: style.id %>
      <%= f.number_field :quantity, value: 0, min: 1 %>
      <%= f.submit "Добавить в расписание" %></td>
    <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Добавить программу', new_style_path %></p>
<%= link_to "Назад", :back %>

<style>/* Заголовок */
h1 {
  font-size: 28px;
  color: #333;
  margin-bottom: 20px;
}

/* Таблица */
table {
  width: 100%;
  border-collapse: collapse;
}

thead th, tbody td {
  padding: 10px;
  border: 1px solid #ccc;
}

thead th {
  background-color: #f2f2f2;
  font-weight: bold;
  text-align: center;
}

/* Строки */
tbody tr {
  border-bottom: 1px solid #ccc;
}

/* Ссылки в таблице */
tbody tr td a {
  display: inline-block;
  padding: 5px 10px;
  text-decoration: none;
  color: #007bff;
}

/* Ссылки внизу страницы */
p a {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
}

/* Ссылка "Назад" */
p a:last-child {
  margin-left: 20px;
  background-color: #333;
}</style>